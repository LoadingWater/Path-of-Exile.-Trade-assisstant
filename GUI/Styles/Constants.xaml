                    xmlns:Sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:local="clr-namespace:GUI.Styles">

    <FontFamily x:Key="FontingSmallCaps">Resources/Fonts/#Fontin SmallCaps</FontFamily>

    <SolidColorBrush x:Key="DarkBrownColor" Color="#1E1111"/>
