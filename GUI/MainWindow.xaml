<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Trade assisstant" Height="720" Width="1280">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!--#region Heading definition-->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!--#region Tabs, Item, Price, Elapsed time, From last change -->
            <Label Grid.Column="0"
               Grid.Row="0"
               Content="Tabs"
               Style="{StaticResource HeadingStyle}">
            </Label>
            <Label Grid.Column="1"
               Grid.Row="0"
               Content="Item"
               Style="{StaticResource HeadingStyle}">
            </Label>
            <Label Grid.Column="2"
               Grid.Row="0"
               Content="Price"
               Style="{StaticResource HeadingStyle}">
            </Label>
            <Label Grid.Column="3"
               Grid.Row="0"
               Content="Elapsed time(all)"
               Style="{StaticResource HeadingStyle}">
            </Label>
            <Label Grid.Column="4"
               Grid.Row="0"
               Content="From last change"
               Style="{StaticResource HeadingStyle}">
            </Label>
            <!--#endregion Tabs, Item, Price, Elapsed time, From last change -->
        </Grid>
        <!--#endregion-->
        <!--#region Middle definition-->
        <Grid  Grid.Row="1">
            <ScrollViewer VerticalScrollBarVisibility="Visible"
                          HorizontalScrollBarVisibility="Disabled"
                          FlowDirection="RightToLeft"
                          Foreground="#1E1111">
                <TabControl TabStripPlacement="Right"
                            x:Name="TabControlKey"
                            Background="#1E1111">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>

                        </Grid.ColumnDefinitions>
                        
                    </Grid>
                </TabControl>
            </ScrollViewer>
        </Grid>
        <!--#endregion-->
        <!--region Down definition-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <!--Used to fill without any problem. Easier than listbox. no need ot bind-->
            <DockPanel x:Name="ListBox"
                     Grid.Row="0"
                     Grid.Column="0"
                     Background="#371200">
                <TextBox x:Name="EnterPoEID"
                         Text="Enter PoE ID" 
                         Margin="5,5,5,5"
                         Style="{StaticResource HeadingStyle}"
                         Background="AliceBlue"
                         Foreground="Black"
                         GotFocus="EnterPoEID_GotFocus"
                         LostFocus="EnterPoEID_LostFocus">
                </TextBox>
            </DockPanel>

            <Button x:Name="GoButton"
                    Grid.Column="1"
                    Grid.Row="0"
                    Content="Go"
                    Click="GoButton_Click"
                    Style="{StaticResource HeadingStyle}">
            </Button>

            <ComboBox Grid.Column="2"
                      Grid.Row="0"
                      Style="{StaticResource ComboBoxStyle}">
                
                        
                <ComboBoxItem Content="No Item"
                              Style="{StaticResource HeadingStyle}"
                              Height="50"/>
            </ComboBox>
        </Grid>
        <!--#endregion-->
    </Grid>
</Window>